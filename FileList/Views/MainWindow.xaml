<Window x:Class="FileList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileList.ViewModels"
        mc:Ignorable="d"
        FontSize="20"
        Title="FileList" Height="323" Width="783" ResizeMode="NoResize">
    <Window.Resources>
        <local:MainWindowViewModel x:Key="viewModel"/>
    </Window.Resources>
    <Window.DataContext>
        <Binding Source="{StaticResource viewModel}"/>
    </Window.DataContext>



    <Grid x:Name="mainGrid" Margin="0,0,4,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="342"></ColumnDefinition>
            <ColumnDefinition Width="168"/>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4">
            <Rectangle x:Name="DropSite"  Fill="#FFAAF3F3" Height="100" AllowDrop="True" DragDrop.Drop="Grid_Drop" Margin="5">
                <Rectangle.Effect>
                    <DropShadowEffect Opacity="0.5" BlurRadius="10" ShadowDepth="3"/>
                </Rectangle.Effect>
            </Rectangle>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" AllowDrop="True" DragDrop.Drop="Grid_Drop" Text="{Binding StatusString}"></TextBlock>
        </Grid>
        <Label Grid.Row="2" Grid.Column="1" MinWidth="95" TextBlock.TextAlignment="Center" Margin="5">목표 경로</Label>
        <TextBox x:Name="FolderPathBox" Grid.Row="2" Grid.Column="2" MinWidth="500" IsReadOnly="True" Margin="5" Width="500" Text="{Binding TargetPath}" Grid.ColumnSpan="2"></TextBox>
        <Button Grid.Row="2" Grid.Column="4" MinWidth="95" Click="SelectFolderBtn_Click" Margin="5,6">
            <Button.Effect>
                <DropShadowEffect BlurRadius="10" Opacity="0.5" ShadowDepth="3"/>
            </Button.Effect> 폴더 선택
        </Button>

        <Label Grid.Row="3" Grid.Column="1" MinWidth="95" TextBlock.TextAlignment="Center" Margin="5">저장 경로</Label>
        <TextBox x:Name="savePathBox" Grid.Row="3" Grid.Column="2" MinWidth="500" Margin="5" Width="500" Text="{Binding SaveTargetPath}" Grid.ColumnSpan="2"></TextBox>

        <Button Grid.Row="4" Grid.Column="2" Click="MakeListBtn_Click" Margin="5" Grid.ColumnSpan="2">
            <Button.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.5"/>
            </Button.Effect> 리스트 생성
        </Button>
    </Grid>
</Window>
